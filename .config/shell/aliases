# Aliases file - contains bash/zsh aliases

# Repeat the last command, but sudo it...
alias fuck='sudo $(fc -ln -1)'

# Copy last command to clipboard
alias yank='echo $(fc -ln -1) | xclip -selection clipboard'

# List all fonts
alias fonts='fc-list | cut -d ":" -f 1 | sort'

# Quick file edits
alias conf-aliases='$EDITOR $HOME/.config/shell/aliases'
alias conf-functions='$EDITOR $HOME/.config/shell/functions'
alias conf-kitty='$EDITOR $HOME/.config/kitty/kitty.conf'
alias conf-i3='$EDITOR $HOME/.config/i3/config'

# Application drop-ins
alias cat=bat
